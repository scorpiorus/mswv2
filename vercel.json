{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**/*.js", "shared/**/*.js", "shared/**/*.ts"],
        "maxDuration": 30
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/index.js" },
    { "src": "/(.*)", "dest": "/client/dist/$1" }
  ],
  "functions": {
    "server/index.js": {
      "includeFiles": "shared/**"
    }
  },
  "outputDirectory": "client/dist"
}
